@model IEnumerable<CarrierRateViewModel>

@{
    ViewBag.Title = "Carriers Rating";
}

<h2>@ViewBag.Title</h2>

<p>
    @if ((bool)ViewBag.AnyToRate)
    {
        @Html.ActionLink("Create New", "Create")
    }
    else
    {
        <span>No more carriers to rate</span>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Carrier.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Carrier.Name)
        </td>
        <td>
            <input type="number" value="@item.Rate" class="item-rate" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".item-rate").rating({
                min: 0,
                max: 5,
                step: 1,
                size: 'xs',
                displayOnly: true
            });
        });
    </script>
}